{
  "name": "store-manager",
  "version": "1.0.0",
  "description": "Store Manager is a web application that helps store owners manage sales and product inventory records.",
  "main": "index.js",
  "engines": {
    "node": "8.11.2"
  },
  "scripts": {
    "build": "rm -rf ./dist/* && babel ./server --out-dir ./dist --ignore ./server/test",
    "start": "node ./dist",
    "dev": "nodemon --exec babel-node ./server/index.js --env",
    "test": "nyc --reporter=text-summary --reporter=html mocha ./server/test --exit --require babel-register"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jesseinit/store-manager.git"
  },
  "keywords": [
    "products",
    "sales",
    "store",
    "manager"
  ],
  "author": "Jesse Egbosionu",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jesseinit/store-manager/issues"
  },
  "homepage": "https://github.com/jesseinit/store-manager#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "coveralls": "^3.0.2",
    "eslint": "^5.3.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "^7.11.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.4",
    "nyc": "^13.0.1",
    "prettier": "^1.14.3"
  },
  "dependencies": {
    "fancy-log": "^1.3.2",
    "chai": "^4.2.0",
    "chai-http": "^4.2.0",
    "express": "^4.16.4",
    "express-validator": "^5.3.0",
    "sinon": "^6.3.5",
    "sinon-express-mock": "^2.0.5"
  }
}
